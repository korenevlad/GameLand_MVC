@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Список товаров</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-4">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle-dotted"></i> Создать новый товар
                </a>
            </div>
        </div>

        <table id="tblDataProduct" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Артикул</th>
                    <th>Цена</th>
                    <th>Старая цена</th>
                    <th>Категория</th>
                    <th></th>
                </tr>
            </thead>

        </table>



    </div>
</div>

@section Scripts{
    <script src="~/js/product_list.js"></script>
}

