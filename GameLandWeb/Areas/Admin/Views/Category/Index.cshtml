@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Список категорий</h2>
            </div>
        </div>
    </div>


    <div class="card-body p-4">
        <div class="row pb-4">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-area="Admin" asp-controller="Category" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle-dotted"></i> Создать новую категорию
                </a>
            </div>
        </div>


        <table id="tblDataCategory" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Код</th>
                    <th></th>
                </tr>
            </thead>
        </table>

    </div>
</div>



@section Scripts{
    <script src="~/js/category_list.js"></script>
}




